<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Include Spring Boot's default configuration -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>
    
    <!-- Disable Notion SDK logging completely -->
    <logger name="notion.api.v1.logging" level="OFF" additivity="false"/>
    <logger name="notion.api.v1.logging.StdoutLogger" level="OFF" additivity="false"/>
    <logger name="notion.api.v1" level="WARN" additivity="false"/>
    <logger name="notion.api" level="WARN" additivity="false"/>
    <logger name="notion" level="WARN" additivity="false"/>
    
    <!-- Set atmosphere logging to warn as configured in application.properties -->
    <logger name="org.atmosphere" level="WARN"/>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
