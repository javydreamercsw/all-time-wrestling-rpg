<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!-- 
    This file contains suppressions for OWASP Dependency Check false positives.
    Each suppression should include a justification comment explaining why it's safe to suppress.
    -->
    
    <!-- Suppress false positives for Vaadin components that are not directly exposed -->
    <suppress>
        <notes><![CDATA[
        Vaadin framework components are server-side rendered and not directly exposed to client-side attacks.
        These CVEs typically apply to client-side JavaScript usage which doesn't apply to our server-side Vaadin usage.
        ]]></notes>
        <packageUrl regex="true">^pkg:javascript/.*</packageUrl>
        <cve>CVE-2021-23337</cve>
        <cve>CVE-2021-23382</cve>
        <cve>CVE-2021-23424</cve>
    </suppress>
    
    <!-- 
    Test and provided scope dependencies are skipped via plugin configuration in pom.xml.
    -->
</suppressions>
